<div class="col-6">
    <div class="horizontal-news card border-0 h-100 rounded-0">
        <a class="d-block img-hover-zoom" href="{full-link}" title="{title}">
            <img class="d-block img-fluid" src="{image-1}" loading="lazy" width="860" height="504" alt="{title}">
        </a>
        <div class="card-body p-3">
            <a href="/{category-url}" title="{category}" class="fw-bold text-uppercase" target="_self" style="color: #3ab7b2;">
                {category}
            </a>
            <h4 class="mb-0">
                <a href="{full-link}" class="title-2-line" title="{title}" target="_self">
                    {title}
                </a>
            </h4>
            <div class="news-meta small text-muted mt-2">
                <span><i class="far fa-clock"></i> {date=d.m.Y}</span>
                [comments]<span class="ms-3"><i class="far fa-comment"></i> {comments-num}</span>[/comments]
                [views]<span class="ms-3"><i class="far fa-eye"></i> {views}</span>[/views]
            </div>
        </div>
    </div>
</div>